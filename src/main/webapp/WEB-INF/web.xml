<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Welcome</servlet-name>
        <servlet-class>Servlets.Welcome</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Welcome</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SaveProject</servlet-name>
        <servlet-class>Servlets.SaveProject</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SaveProject</servlet-name>
        <url-pattern>/save-project</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateProject</servlet-name>
        <servlet-class>Servlets.UpdateProject</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateProject</servlet-name>
        <url-pattern>/update-project</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteProject</servlet-name>
        <servlet-class>Servlets.DeleteProject</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProject</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DisplayProject</servlet-name>
        <servlet-class>Servlets.DisplayProject</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayProject</servlet-name>
        <url-pattern>/display</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddTasks</servlet-name>
        <servlet-class>Servlets.AddTasks</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddTasks</servlet-name>
        <url-pattern>/add-tasks</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DisplayTasks</servlet-name>
        <servlet-class>Servlets.DisplayTasks</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayTasks</servlet-name>
        <url-pattern>/display-tasks</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DisplayResources</servlet-name>
        <servlet-class>Servlets.DisplayResources</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayResources</servlet-name>
        <url-pattern>/display-resources</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddResources</servlet-name>
        <servlet-class>Servlets.AddResources</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddResources</servlet-name>
        <url-pattern>/add-resources-pattern</url-pattern>
    </servlet-mapping>




</web-app>